<Window x:Class="KursVerwaltung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Course and Room Management"
        Height="600" Width="900"
        Background="#F5F6FA"
        FontFamily="Segoe UI">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Button Content="NEW COURSE"
                        Width="200" Height="50"
                        Margin="0,0,20,0"
                        Click="NewCourse_Click"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#4A90E2"
                        BorderBrush="#4A90E2"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    Padding="10"
                                    SnapsToDevicePixels="True"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="NEW ROOM"
                        Width="200" Height="50"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#50C878"
                        BorderBrush="#50C878"
                        Click="NewRoom_Click"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    Padding="10"
                                    SnapsToDevicePixels="True"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <GroupBox Header="Room List"
                      FontWeight="Bold"
                      FontSize="16"
                      Foreground="#333"
                      Padding="0"
                      Background="Transparent"
                      BorderBrush="Transparent">
                <Border Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>

                    <DataGrid x:Name="RoomsDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="0,10,0,0"
                              RowBackground="White"
                              AlternatingRowBackground="#F2F4F6"
                              GridLinesVisibility="None"
                              BorderThickness="0"
                              HeadersVisibility="Column"
                              FontSize="14"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              HorizontalScrollBarVisibility="Disabled"
                              CanUserResizeColumns="False">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#E8EAF6"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Height" Value="35"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="3" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D6EAF8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Room Name" Binding="{Binding Rnr}" Width="*"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="*"/>
                            <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete"
                                                Click="DeleteButton_Click"
                                                Background="#E74C3C"
                                                Foreground="White"
                                                Padding="5,2"
                                                Cursor="Hand"
                                                BorderBrush="#E74C3C">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5"
                                                            Padding="2">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Window>
