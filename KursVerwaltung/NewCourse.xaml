<Window x:Class="KursVerwaltung.NewCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Course"
        Height="450" Width="700"
        Background="#F7F9FB"
        FontFamily="Segoe UI">
    <Border CornerRadius="12" Background="White" Padding="30" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Title:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
            <TextBox x:Name="TitleTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" Padding="8"/>

            <TextBlock Text="Duration:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="DurationTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Padding="8"/>

            <TextBlock Text="Price:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
            <TextBox x:Name="PriceTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" Padding="8"/>

            <TextBlock Text="Available:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"/>
            <CheckBox x:Name="IsAvailableCheckBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="Room:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
            <TextBox x:Name="RoomTextBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" Padding="8"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="6" Grid.ColumnSpan="2" Margin="0,20,0,0">
                <Button Content="Add" Width="100" Margin="5" Click="Add_Click"
                        Background="#4A90E2" Foreground="White" FontWeight="Bold" BorderBrush="#4A90E2" Cursor="Hand"/>
                <Button Content="Cancel" Width="100" Margin="5" Click="Cancel_Click"
                        Background="#E74C3C" Foreground="White" FontWeight="Bold" BorderBrush="#E74C3C" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
